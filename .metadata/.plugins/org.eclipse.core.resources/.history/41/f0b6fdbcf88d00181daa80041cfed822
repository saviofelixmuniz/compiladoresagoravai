grammar org.xtext.example.go.Go with org.eclipse.xtext.common.Terminals

generate go "http://www.xtext.org/example/go/Go"

Model:
	greetings+=Greeting*;
	
Greeting:
	"Hello" AritExp* | BooleanExp* ";";

Exp: 
	Exp "(" Exp ")" | Or | Addition
;

BooleanExp:
	"!"? Or	
;

Or:
	And ('||' And)*
;

And:
	PrimaryBool ('&&' PrimaryBool)*
;

PrimaryBool:
	BooleanLiteral | '(' BooleanExp ')'
;

BooleanLiteral:
	BOOL
;

AritExp:
	Addition	
;

Addition:
	(('+'|'-')? Multiplication)+
;

Multiplication:
	PrimaryArit (('*'|'/') PrimaryArit)*
;

PrimaryArit:
	NumberLiteral | '(' AritExp ')'
;

NumberLiteral:
	INT
;

terminal OP_REL:
	"==" | "!=" | "<=" | ">=" | "<" | ">"	
;


terminal BOOL:
	"true" | "false"
;

